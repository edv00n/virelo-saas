<%- include('../layout', { body: '' }) %>
<section class="section">
  <div class="section-header">
    <h1>Leads</h1>
    <a href="/leads/new" class="btn-primary">Add lead</a>
  </div>

  <% if (leads.length === 0) { %>
    <p>No leads yet. Click "Add lead" to create your first one.</p>
  <% } else { %>
    <div class="list">
      <% leads.forEach(lead => { %>
        <a href="/leads/<%= lead.id %>" class="list-item">
          <div>
            <strong><%= lead.name %></strong>
            <div class="muted"><%= lead.phone || '' %></div>
          </div>
          <div class="muted"><%= lead.status %></div>
        </a>
      <% }) %>
    </div>
  <% } %>
</section>

